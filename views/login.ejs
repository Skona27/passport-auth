<% include ./partials/header %>

    <h2 style="text-align: center">Login</h2>
    <div style="width: 60%; margin: 25px auto;">
        <form action="/users/login" method="post" style="padding-bottom: 10px;">
            <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="email">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
        </form>
        <a class="btn btn-block btn-social btn-github" href="/auth/github/login">
            <span class="fa fa-github"></span> Sign in with GitHub
        </a>
        <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook/login">
            <span class="fa fa-facebook"></span> Sign in with Facebook
        </a>
    </div>

    <% include ./partials/footer %>